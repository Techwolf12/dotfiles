#!/bin/bash

# Aliases to not delete everything
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Custom git
alias gittime='git log -5 --format="%cd"'
alias gitl='git log --graph --abbrev-commit --pretty=oneline --decorate'
alias gitaddcommitpullpush='git add . && git commit -a && git pull && git push'
alias gitc='git commit -S'

# Programs
alias vlcplay='vlc -f --no-video-title-show --no-osd --play-and-exit -q'
alias sshproxy='ssh -Nn -D 1080'
alias radiodecode='multimon | grep "DTMF\|CCIR\|AFSK"'
alias gpge='gpg --armor --encrypt --sign'
alias gpgs='gpg --clearsign'

# Unclear stuff
alias please='sudo'
alias fucking='sudo'
alias down="please shutdown -h now"


# Stolen from Mirko (again yes)
# Merge the .Xresources file after we worked with it.
alias xmerge="xrdb -merge ~/.Xresources"

# Rebind ls to show colors and premissions.
alias ls="ls -aG --color=auto"

# Kill current shell (Leaves no trace of commands.)
alias kcs="kill -9 $$"

# Get your outer IP address.
alias ip="curl icanhazip.com"

alias curl="curl -s -S"

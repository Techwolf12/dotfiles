#!/bin/zsh

# Aliases to not delete everything
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Programs
alias vlcplay='vlc -f --no-video-title-show --no-osd --play-and-exit -q'
alias sshproxy='ssh -Nn -D 1080'
alias gpge='gpg --armor --encrypt --sign'
alias gpgs='gpg --clearsign'

# Unclear stuff
alias please='sudo'
alias fucking='sudo'
alias down="please shutdown -h now"

# Our GNU man!
alias rms='chromium --incognito --app=https://rms.sexy/'

# Stolen from Mirko (again yes)
# Merge the .Xresources file after we worked with it.
alias xmerge="xrdb -merge ~/.Xresources"

# Kill current shell (Leaves no trace of commands.)
alias kcs="kill -9 $$"

# Get your outer IP address.
alias ip="curl icanhazip.com"

alias ix="curl -F 'f:1=<-' ix.io"
alias curl="curl -s -S"

alias openports="nmap portquiz.net"
alias music="ncmpc"
alias t="nc techwolf12.nl 9999"
